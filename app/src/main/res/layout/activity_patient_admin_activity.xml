<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_admin_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#00BCD4"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="350dp"
                android:src="@drawable/ayush"
                android:id="@+id/mlogo"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="70dp"
                android:textColor="@color/colorWhite"
                android:text="@string/app_name"
                android:textSize="35sp"
                android:layout_marginEnd="55dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:ignore="missingConstraints">
    <Button
        android:id="@+id/ar"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:paddingEnd="35dp"
        android:layout_marginStart="80dp"
        android:text="Appointments Received"
        android:background="#866704"
        android:textColor="#ffffff"/>
        <Button
            android:id="@+id/privatechat"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingEnd="35dp"
            android:layout_marginStart="80dp"
            android:text="Private Chat"
            android:background="#866704"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/pres"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="80dp"
            android:paddingEnd="35dp"
            android:text="New Prescription and Old Prescription"
            android:background="#866704"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/asb"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="80dp"
            android:paddingEnd="35dp"
            android:text="Appointment Status Bar"
            android:background="#866704"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/Ambulance"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="80dp"
            android:paddingEnd="35dp"
            android:text="Ambulance"
            android:background="#866704"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/Route_map"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="80dp"
            android:paddingEnd="35dp"
            android:text="Route Map"
            android:background="#866704"
            android:textColor="#ffffff"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>